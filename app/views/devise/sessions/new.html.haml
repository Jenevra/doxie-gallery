%h1 Sign In
.row.main-form
  = form_for(resource, as: resource_name, url: session_path(resource_name)) do |f|
    .form-group
      .cols-sm-10
        = f.label :email
        - if devise_mapping.registerable?
          = link_to 'Sign up', new_registration_path(resource_name), class: 'right'
        .input-group
          = f.email_field :email, autofocus: true, autocomplete: "email", class: 'form-control', placeholder: 'Enter your email'
    .form-group
      .cols-sm-10
        = f.label :password
        .input-group
          = f.password_field :password, autofocus: true, autocomplete: "new-password", class: 'form-control', placeholder: 'Enter your password'
        %br
        - if devise_mapping.rememberable?
          .field
            = f.check_box :remember_me
            = f.label :remember_me
    .form-group
      %input#button.btn.btn-primary.btn-lg.btn-block.login-button{ type: "submit", value: "Sign In"}/
