%h1 Sign Up
.row.main-form
  = form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f|
    = render "devise/shared/error_messages", resource: resource
    .form-group
      .cols-sm-10
        = f.label :email
        .input-group
          = f.email_field :email, autofocus: true, autocomplete: "email", class: 'form-control', placeholder: 'Enter your email'
    .form-group
      .cols-sm-10
        = f.label :password
        .input-group
          = f.password_field :password, autofocus: true, autocomplete: "new-password", class: 'form-control', placeholder: 'Enter your password'
    .form-group
      .cols-sm-10
        = f.label :password_confirmation
        .input-group
          = f.password_field :password_confirmation, autofocus: true, autocomplete: "new-password", class: 'form-control', placeholder: 'Confirm your password'
    .form-group
      %input#button.btn.btn-primary.btn-lg.btn-block.login-button{ type: "submit", value: "Sign Up"}/



